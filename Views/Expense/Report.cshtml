@model Dictionary<string, decimal>

@{
    ViewData["Title"] = "Báo cáo chi tiêu";
}

<div class="container">
    <h2>Báo cáo chi tiêu</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Tổng chi tiêu theo loại</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Loại chi tiêu</th>
                                <th>Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Key</td>
                                    <td>@item.Value.ToString("N0") VNĐ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Tổng cộng</th>
                                <th>@Model.Values.Sum().ToString("N0") VNĐ</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        <a asp-action="ExportExcel" class="btn btn-success">Xuất Excel</a>
    </div>
</div> 