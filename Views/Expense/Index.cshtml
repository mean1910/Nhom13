@model IEnumerable<WebApplication1.Models.Expense>

@{
    ViewData["Title"] = "Quản lý chi tiêu";
}

<div class="container">
    <h2>Quản lý chi tiêu</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm chi tiêu mới</a>
        <a asp-action="Report" class="btn btn-info">Xem báo cáo</a>
        <a asp-action="ExportExcel" class="btn btn-success">Xuất Excel</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Type)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Note)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                </tr>
            }
        </tbody>
    </table>
</div> 