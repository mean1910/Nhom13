@model IEnumerable<WebApplication1.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title">Danh sách người dùng</h4>
                    <a asp-action="Register" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Thêm nhân viên
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td>
                                            <span class="badge @(item.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                                @Html.DisplayFor(modelItem => item.Role)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                                @(item.IsActive ? "Hoạt động" : "Đã khóa")
                                            </span>
                                        </td>
                                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn @(item.IsActive ? "btn-danger" : "btn-success") btn-sm"
                                                            onclick="return confirm('Bạn có chắc chắn muốn @(item.IsActive ? "khóa" : "mở khóa") tài khoản này?')"
                                                            title="@(item.IsActive ? "Khóa tài khoản" : "Mở khóa tài khoản")">
                                                        <i class="fas @(item.IsActive ? "fa-lock" : "fa-unlock")"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
} 