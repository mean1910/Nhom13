@model WebApplication1.Models.User

@{
    ViewData["Title"] = "Thêm người dùng mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <i class="ti ti-user-plus me-2 fs-4"></i>
                        <h5 class="mb-0">@ViewData["Title"]</h5>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Username" class="form-label">
                                    <i class="ti ti-user me-1"></i> @Html.DisplayNameFor(m => m.Username)
                                </label>
                                <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">
                                    <i class="ti ti-lock me-1"></i> @Html.DisplayNameFor(m => m.Password)
                                </label>
                                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FullName" class="form-label">
                                    <i class="ti ti-user-circle me-1"></i> @Html.DisplayNameFor(m => m.FullName)
                                </label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">
                                    <i class="ti ti-mail me-1"></i> @Html.DisplayNameFor(m => m.Email)
                                </label>
                                <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Phone" class="form-label">
                                    <i class="ti ti-phone me-1"></i> @Html.DisplayNameFor(m => m.Phone)
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="ti ti-device-floppy me-1"></i> Lưu
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="ti ti-arrow-back me-1"></i> Quay lại
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Thêm animation cho form
            $('.form-control').addClass('animate__animated animate__fadeIn');
            
            // Thêm tooltip cho các trường
            $('[data-toggle="tooltip"]').tooltip();
            
            // Thêm validation realtime
            $('.form-control').on('input', function() {
                if ($(this).val()) {
                    $(this).addClass('is-valid').removeClass('is-invalid');
                } else {
                    $(this).addClass('is-invalid').removeClass('is-valid');
                }
            });
        });
    </script>
} 