@model WebApplication1.Models.Ingredient

@{
    ViewData["Title"] = "Chi tiết nguyên liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="ti ti-clipboard-text"></i> Chi tiết nguyên liệu
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="text-center mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" />
                    }
                    else
                    {
                        <div class="p-4 bg-light rounded">
                            <i class="ti ti-photo-off fs-1 text-muted"></i>
                            <p class="mb-0 mt-2">Không có hình ảnh</p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light" style="width: 30%">Tên nguyên liệu</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Đơn vị tính</th>
                                <td>@Model.Unit</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Giá</th>
                                <td>@Model.Price.ToString("N0") VNĐ</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Nhà cung cấp</th>
                                <td>@Model.Supplier.Name</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Mô tả</th>
                                <td>@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="ti ti-edit"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-back-up"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="~/css/ingredient-details.css" />
} 