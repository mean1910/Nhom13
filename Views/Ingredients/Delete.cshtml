@model WebApplication1.Models.Ingredient

@{
    ViewData["Title"] = "Xóa nguyên liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">
            <i class="ti ti-trash"></i> Xác nhận xóa nguyên liệu
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <div class="alert alert-warning">
                    <i class="ti ti-alert-triangle"></i>
                    Bạn có chắc chắn muốn xóa nguyên liệu này? Hành động này không thể hoàn tác.
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" />
                                }
                                else
                                {
                                    <div class="text-center p-3 bg-light rounded">
                                        <i class="ti ti-photo-off fs-2"></i>
                                        <p class="mb-0">Không có hình ảnh</p>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <table class="table table-borderless">
                                    <tr>
                                        <th style="width: 150px;">Tên nguyên liệu:</th>
                                        <td>@Model.Name</td>
                                    </tr>
                                    <tr>
                                        <th>Đơn vị tính:</th>
                                        <td>@Model.Unit</td>
                                    </tr>
                                    <tr>
                                        <th>Giá:</th>
                                        <td>@Model.Price.ToString("N0") VNĐ</td>
                                    </tr>
                                    <tr>
                                        <th>Nhà cung cấp:</th>
                                        <td>@Model.Supplier.Name</td>
                                    </tr>
                                    <tr>
                                        <th>Mô tả:</th>
                                        <td>@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description)</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="ti ti-trash"></i> Xác nhận xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-back-up"></i> Quay lại
                    </a>
                </form>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Lưu ý quan trọng</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="ti ti-alert-circle text-warning"></i>
                                Việc xóa sẽ ảnh hưởng đến dữ liệu liên quan trong kho
                            </li>
                            <li class="mb-2">
                                <i class="ti ti-file text-warning"></i>
                                Các đơn đặt hàng liên quan sẽ vẫn được giữ lại
                            </li>
                            <li>
                                <i class="ti ti-photo text-warning"></i>
                                Hình ảnh của nguyên liệu sẽ bị xóa vĩnh viễn
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 